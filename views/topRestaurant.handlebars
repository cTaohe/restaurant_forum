<h1>人氣餐廳</h1>
<hr />
<div class="col-8 m-auto">
    {{#each topRestaurants}}
  <div class="row bg-white my-3">
    <div class="col-4 p-0">
      <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
    </div>
    <div class="col-8">
      <h3>{{this.name}}</h3>
      <span class="badge badge-secondary">收藏數: {{this.FavoritedCount}}</span>
      <p>{{this.description}}</p>
      <a href="/restaurants/{{this.id}}" class="btn btn-primary">Show</a>
      {{#if this.isFavorited }}
      <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="m-1 d-inline">
        <button type="submit" class="btn btn-danger">移除最愛</button>
      </form>
      {{else}}
      <form action="/favorite/{{this.id}}" method="POST" class="m-1 d-inline">
        <button type="submit" class="btn btn-primary">加到最愛</button>
      </form>
      {{/if}}
    </div>
  </div>
    {{/each}}
</div>