<div class="row mx-0 my-5" style="background-color: white;">
  <div class="col-md-4 p-0">
    {{#if profile.image}}
    <img src="{{profile.image}}" alt="{{profile.name}}" style="width: 100%;">
    {{else}}
    <img src="https://img.icons8.com/officel/100/000000/guest-male.png" alt="{{profile.name}}" style="width: 100%;">
    {{/if}}
  </div>
  <div class="col-md-8">
    <h3>{{profile.name}}</h3>
    {{profile.email}}
    <br />
    <br />
    {{#ifCond profile.id user.id}}
    <a href="/users/{{profile.id}}/edit" class="btn btn-primary">edit</a>
    {{/ifCond}}
  </div>
</div>
<div class="card">
  <h5 class="card-header">{{comment.length}} 已經評論餐廳</h5>
  <div class="card-body row">
    {{#each comment}}
    <div class="m-1">
      <a href="/restaurants/{{this.Restaurant.id}}" style="text-decoration:none;">
        <img src="{{this.Restaurant.image}}" alt="{{this.Restaurant.name}}">
      </a>
    </div>
    {{/each}}
  </div>
</div>
<a href="javascript:history.back()">回上一頁</a>